<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:type="MailApp">
  <Id>your-unique-guid-here</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Aiello</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Cleanup"/>
  <Description DefaultValue="Shows the current time when a new email arrives."/>
  <IconUrl DefaultValue="https://app.aiello.ch/icon.png"/>
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1"/>
    </Sets>
  </Requirements>
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://app.aiello.ch/dialog.html"/>
      </DesktopSettings>
    </Form>
  </FormSettings>
  <Permissions>ReadWriteMailbox</Permissions>
  <ExtensionPoint xsi:type="Events">
    <Event Type="OnNewEmail" FunctionExecution="synchronous" FunctionName="onNewEmailHandler"/>
  </ExtensionPoint>
</OfficeApp>